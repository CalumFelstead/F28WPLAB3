<%- include('header'); -%>

<div class="content">
    <h1>Selected articles</h1>
    <table id="catalogue">
        <thead>
        <tr>
            <th>Name</th>
            <th scope="col">Reference</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">supplier</th>
            <th scope="col">vat</th>
            <th scope="col">stock</th>
            <th scope="col">critical stock</th>

        </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">
                    <%= product.name %>
                </th>
                <td>
                    <%= product.reference %>
                </td>
                <td>
                    <%= product.category %>
                </td>
                <td>
                    <%= product.price %>AED
                </td>
                <td>
                    <%= product.supplier %>
                </td>
                <td>
                    <%= product.vat %>
                </td>
                <td>
                    <%= product.stock %>
                </td>
                <td>
                    <%= product.critical_stock %>
                </td>
            </tr>

        </tbody>
    </table>
</div>
<br>
<%- include('footer'); -%>